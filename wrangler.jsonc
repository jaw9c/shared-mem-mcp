{
	"$schema": "node_modules/wrangler/config-schema.json",
	"name": "shared-mem-mcp",
	"main": "src/index.ts",
	"compatibility_date": "2025-03-10",
	"compatibility_flags": ["nodejs_compat"],
	"migrations": [
		{
			"new_sqlite_classes": ["MyMCP"],
			"tag": "v1"
		}
	],
	"durable_objects": {
		"bindings": [
			{
				"class_name": "MyMCP",
				"name": "MCP_OBJECT"
			}
		]
	},
	"kv_namespaces": [
		{
			"binding": "KV_BINDING",
			"id": "95eda5c8170641e7bff59f26087fbc26"
		}
	],
	"observability": {
		"enabled": true
	}
}